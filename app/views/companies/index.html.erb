<h1>Listing Companies</h1>
 
 <%= link_to 'New company', new_company_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Email</th>
  </tr>
 
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.add %></td>
      <td><%= company.city %></td>
      <td><%= company.state %></td>
      <td><%= company.email %></td>
      <td><%= link_to 'Show', company_path(company) %></td>
    </tr>
  <% end %>
</table>