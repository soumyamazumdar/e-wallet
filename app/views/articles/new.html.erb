
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
  <%= f.label :date%><br>

  <%= f.date_select(:date, :order => [:month, :day, :year]) %>
    <%= f.date_select :dateinstructed,:order => [:day, :month, :year] %><br>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'back', articles_path %>